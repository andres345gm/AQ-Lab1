@model IEnumerable<personapi_dotnet.Models.Entities.Profesion>

<h1>Profesiones</h1>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Descripción</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var profesion in Model)
        {
            <tr>
                <td>@Html.DisplayFor(m => profesion.Id)</td>
                <td>@Html.DisplayFor(m => profesion.Nom)</td>
                <td>@Html.DisplayFor(m => profesion.Des)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@profesion.Id">Editar</a> |
                    <a asp-action="Delete" asp-route-id="@profesion.Id">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Crear Nueva Profesión</a>
