@model personapi_dotnet.Models.Entities.Estudio

@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h1>Delete Estudio</h1>
                <a asp-action="Index" class="btn btn-link" title="Back to List">
                    <i class="bi bi-arrow-left-circle" style="font-size: 1.5rem;"></i>
                </a>
            </div>

            <h3>Are you sure you want to delete this?</h3>
            <dl class="row my-4">
                <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Fecha)</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Fecha)</dd>

                <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Univer)</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Univer)</dd>

                <dt class="col-sm-2">@Html.DisplayNameFor(model => model.CcPerNavigation)</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.CcPerNavigation.Cc)</dd>

                <dt class="col-sm-2">@Html.DisplayNameFor(model => model.IdProfNavigation)</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.IdProfNavigation.Id)</dd>
            </dl>

            <form asp-action="Delete" class="d-flex justify-content-center">
                <input type="hidden" asp-for="IdProf" />
                <input type="hidden" asp-for="CcPer" />
                <button type="submit" class="btn btn-danger btn-lg">
                    <i class="bi bi-trash"></i> Delete
                </button>
            </form>
        </div>
    </div>
</div>
