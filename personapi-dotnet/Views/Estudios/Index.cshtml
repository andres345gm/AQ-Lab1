@model IEnumerable<personapi_dotnet.Models.Entities.Estudio>

    @{
    ViewData["Title"] = "Index";
    }

    <h1>Estudios</h1>

    <p>
        <a asp-action="Create" class="btn btn-primary btn-lg mb-3">
            <i class="fas fa-plus"></i> Create New
        </a>
    </p>

    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Fecha)</th>
                <th>@Html.DisplayNameFor(model => model.Univer)</th>
                <th>@Html.DisplayNameFor(model => model.CcPerNavigation)</th>
                <th>@Html.DisplayNameFor(model => model.IdProfNavigation)</th>
                <th class="text-center" style="width: 150px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Fecha)</td>
                <td>@Html.DisplayFor(modelItem => item.Univer)</td>
                <td>@Html.DisplayFor(modelItem => item.CcPerNavigation.Cc)</td>
                <td>@Html.DisplayFor(modelItem => item.IdProfNavigation.Id)</td>
                <td class="text-center">
                    <a asp-action="Edit" asp-route-idProf="@item.IdProf" asp-route-CcPer="@item.CcPer" class="btn btn-sm btn-warning me-1" title="Edit">
                        <i class="bi bi-pencil-square"></i>
                    </a>
                    <a asp-action="Details" asp-route-idProf="@item.IdProf" asp-route-CcPer="@item.CcPer" class="btn btn-sm btn-info me-1" title="Details">
                        <i class="bi bi-info-circle"></i>
                    </a>
                    <a asp-action="Delete" asp-route-idProf="@item.IdProf" asp-route-CcPer="@item.CcPer" class="btn btn-sm btn-danger" title="Delete">
                        <i class="bi bi-trash"></i>
                    </a>
                </td>
            </tr>
        }
        </tbody>
    </table>

    @section Scripts {
        <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    }
