@model personapi_dotnet.Models.Entities.Estudio

@{
    ViewData["Title"] = "Edit";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h1>Edit Estudio</h1>
                <a asp-action="Index" class="btn btn-link" title="Back to List">
                    <i class="bi bi-arrow-left-circle" style="font-size: 1.5rem;"></i>
                </a>
            </div>

            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <input type="hidden" asp-for="IdProf" />
                <input type="hidden" asp-for="CcPer" />

                <div class="form-floating mb-3">
                    <input asp-for="Fecha" class="form-control" />
                    <label asp-for="Fecha"></label>
                    <span asp-validation-for="Fecha" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Univer" class="form-control" />
                    <label asp-for="Univer"></label>
                    <span asp-validation-for="Univer" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-primary btn-lg">
                        <i class="bi bi-save"></i> Save
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
