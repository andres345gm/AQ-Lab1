@model personapi_dotnet.Models.Entities.Persona

@{
    ViewData["Title"] = "Edit";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h1>Edit Persona</h1>
                <a asp-action="Index" class="btn btn-link" title="Back to List">
                    <i class="bi bi-arrow-left-circle" style="font-size: 1.5rem;"></i>
                </a>
            </div>

            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="Cc" />

                <div class="form-floating mb-3">
                    <input asp-for="Nombre" class="form-control shadow-sm" placeholder="Nombre" />
                    <label asp-for="Nombre">Nombre</label>
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Apellido" class="form-control shadow-sm" placeholder="Apellido" />
                    <label asp-for="Apellido">Apellido</label>
                    <span asp-validation-for="Apellido" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Genero" class="form-control shadow-sm" placeholder="Genero" />
                    <label asp-for="Genero">Género</label>
                    <span asp-validation-for="Genero" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Edad" class="form-control shadow-sm" placeholder="Edad" />
                    <label asp-for="Edad">Edad</label>
                    <span asp-validation-for="Edad" class="text-danger"></span>
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-primary btn-lg">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
