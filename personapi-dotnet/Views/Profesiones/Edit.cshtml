@model personapi_dotnet.Models.Entities.Profesion

@{
    ViewData["Title"] = "Edit";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h1>Edit Profesion</h1>
                <a asp-action="Index" class="btn btn-link" title="Back to List">
                    <i class="bi bi-arrow-left-circle" style="font-size: 1.5rem;"></i>
                </a>
            </div>

            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="Id" />

                <div class="form-floating mb-3">
                    <input asp-for="Nom" class="form-control shadow-sm" placeholder="Nombre" />
                    <label asp-for="Nom">Nombre</label>
                    <span asp-validation-for="Nom" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Des" class="form-control shadow-sm" placeholder="Descripción" />
                    <label asp-for="Des">Descripción</label>
                    <span asp-validation-for="Des" class="text-danger"></span>
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-primary btn-lg">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
