@model personapi_dotnet.Models.Entities.Telefono

@{
    ViewData["Title"] = "Create";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h1>Create Telefono</h1>
                <a asp-action="Index" class="btn btn-link" title="Back to List">
                    <i class="bi bi-arrow-left-circle" style="font-size: 1.5rem;"></i>
                </a>
            </div>

            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-floating mb-3">
                    <input asp-for="Num" class="form-control shadow-sm" placeholder="Número" />
                    <label asp-for="Num">Número</label>
                    <span asp-validation-for="Num" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Oper" class="form-control shadow-sm" placeholder="Operador" />
                    <label asp-for="Oper">Operador</label>
                    <span asp-validation-for="Oper" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Duenio" class="form-control shadow-sm" placeholder="Dueño" />
                    <label asp-for="Duenio">Dueño (Cc)</label>
                    <span asp-validation-for="Duenio" class="text-danger"></span>
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-primary btn-lg">Create</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
