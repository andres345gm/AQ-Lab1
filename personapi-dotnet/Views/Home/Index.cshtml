@{
    ViewData["Title"] = "Gestión de Personas - Home";
}

<!-- Header -->
<header style="background-color: #2C3E50; color: white; padding: 1rem 0; text-align: center;">
    <h1>Gestión de Personas y Profesiones</h1>
</header>

<!-- Hero Section -->
<section style="background-image: url('/images/hero-background.jpg'); background-size: cover; background-position: center; color: white; padding: 5rem 1rem; text-align: center; background-color: rgba(44, 62, 80, 0.85);">
    <h2 style="font-size: 2.5rem; margin-bottom: 1rem;">Una solución integral para gestionar personas</h2>
    <p style="font-size: 1.2rem; margin-bottom: 2rem;">Administra fácilmente la información personal, profesional, teléfonos y estudios de las personas.</p>
    <a href="#features" style="background-color: #3498DB; color: white; padding: 1rem 2rem; border: none; cursor: pointer; text-transform: uppercase; text-decoration: none;">Descubre más</a>
</section>

<!-- Features Section -->
<section id="features" style="padding: 2rem 1rem; text-align: center; background-color: #ECF0F1;">
    <h2 style="color: #2C3E50;">Características Principales</h2>
    <div style="display: flex; justify-content: space-around; flex-wrap: wrap; margin-top: 2rem;">
        <div style="background-color: white; padding: 1.5rem; margin: 1rem; border-radius: 8px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); max-width: 300px;">
            <h3 style="color: #3498DB; margin-bottom: 1rem;">Gestión de Personas</h3>
            <p style="color: #2C3E50;">Registra y administra datos personales como nombres, apellidos, género y más.</p>
        </div>
        <div style="background-color: white; padding: 1.5rem; margin: 1rem; border-radius: 8px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); max-width: 300px;">
            <h3 style="color: #3498DB; margin-bottom: 1rem;">Control de Profesiones</h3>
            <p style="color: #2C3E50;">Crea y relaciona personas con sus respectivas profesiones y estudios académicos.</p>
        </div>
        <div style="background-color: white; padding: 1.5rem; margin: 1rem; border-radius: 8px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); max-width: 300px;">
            <h3 style="color: #3498DB; margin-bottom: 1rem;">Administración de Teléfonos</h3>
            <p style="color: #2C3E50;">Agrega, actualiza o elimina números de teléfono asociados a cada persona.</p>
        </div>
        <div style="background-color: white; padding: 1.5rem; margin: 1rem; border-radius: 8px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); max-width: 300px;">
            <h3 style="color: #3498DB; margin-bottom: 1rem;">Historial Académico</h3>
            <p style="color: #2C3E50;">Registra las universidades y estudios realizados por cada persona.</p>
        </div>
    </div>
</section>

