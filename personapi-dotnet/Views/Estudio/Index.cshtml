@model IEnumerable<personapi_dotnet.Models.Entities.Estudio>

<h1>Estudios</h1>

<table class="table">
    <thead>
        <tr>
            <th>IDProf</th>
            <th>CcPer</th>
            <th>Fecha</th>
            <th>Univer</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var estudio in Model)
        {
            <tr>
                <td>@Html.DisplayFor(m => estudio.IdProf)</td>
                <td>@Html.DisplayFor(m => estudio.CcPer)</td>
                <td>@Html.DisplayFor(m => estudio.Fecha)</td>
                <td>@Html.DisplayFor(m => estudio.Univer)</td>
                <td>
                    <a asp-action="Edit" asp-route-id_prof="@estudio.IdProf" asp-route-cc_per="@estudio.CcPer">Editar</a> |
                    <a asp-action="Delete" asp-route-id_prof="@estudio.IdProf" asp-route-cc_per="@estudio.CcPer">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Crear Nuevo Estudio</a>
